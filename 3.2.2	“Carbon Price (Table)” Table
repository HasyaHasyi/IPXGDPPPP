let
    // Step 1: Connect to the SharePoint Excel file and retrieve the "World_Bank_Data" table
    Source = Excel.Workbook(Web.Contents("https://petronas.sharepoint.com/teams/ts_peth_financesustainabilit/Shared%20Documents/General/2.%20Carbon%20Management/Carbon%20Cost/Carbon%20Pricing%20PBI/Base%20Data%20(For%20Refresh)/Carbon%20Pricing%20PBI.xlsx"), null, true),
    World_Bank_Data_Table = Source{[Item="World_Bank_Data",Kind="Table"]}[Data],

    // Step 2: Transform column types to ensure data consistency
    #"Changed Type" = Table.TransformColumnTypes(World_Bank_Data_Table, {
        {"Unique ID", type text}, {"Iso Code", type text}, {"Instrument Name", type text}, 
        {"Type of Instrument", type text}, {"Status", type text}, {"Year", Int64.Type}, 
        {"Scope", type text}, {"Juridisction", type text}, {"Region", type text}, 
        {"Level of Income", type text}, {"Price", Int64.Type}, {"Covered Gas", type text}
    }),

    // Step 3: Add an index column to the table starting at 1
    #"Added Index" = Table.AddIndexColumn(#"Changed Type", "Index", 1, 1, Int64.Type),

    // Step 4: Sort the rows by "Price" in ascending order to arrange data from lowest to highest price
    #"Sorted Rows" = Table.Sort(#"Added Index", {{"Price", Order.Ascending}}),

    // Step 5: Remove the "Index" column (temporary column used for sorting)
    #"Removed Columns" = Table.RemoveColumns(#"Sorted Rows", {"Index"}),

    // Step 6: Re-add the "Index" column to provide a clean index after sorting
    #"Added Index1" = Table.AddIndexColumn(#"Removed Columns", "Index", 1, 1, Int64.Type)
in
    #"Added Index1"
